{
  "name": "gcal-timetable",
  "version": "2.0.0",
  "description": "Making timetable on Google Apps Script",
  "private": "true",
  "main": "dist/index.js",
  "scripts": {
    "build": "node esbuild.config.mjs && cp appsscript.json dist/appsscript.json",
    "check": "tsc",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "format": "biome format src",
    "format:fix": "biome format --write src",
    "deploy": "npm run check && npm run build && clasp push",
    "generate-config": "node scripts/generate-config.js",
    "clasp": "clasp"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rmuraix/GCal-timetable.git"
  },
  "author": "Ryota Murai",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rmuraix/GCal-timetable/issues"
  },
  "homepage": "https://github.com/rmuraix/GCal-timetable#readme",
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@google/clasp": "^3.1.1",
    "@types/google-apps-script": "^2.0.7",
    "esbuild": "^0.25.12",
    "esbuild-gas-plugin": "^0.10.0",
    "typescript": "^5.9.3"
  }
}
